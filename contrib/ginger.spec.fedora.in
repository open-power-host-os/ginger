%dir %{_datadir}/wok/plugins/ginger/ui/pages/tabs
%{_datadir}/wok/plugins/ginger/ui/pages/tabs/*.html.tmpl
%{_sysconfdir}/wok/plugins.d/ginger.conf
%{_sysconfdir}/systemd/system/wokd.service.d/ginger.conf


